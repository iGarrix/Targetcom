@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot password";
}

<style>
    .gap {
        gap: 1rem;
    }
    input[type=email] {
        font-size: 14px;
    }
</style>

<div class="d-flex justify-content-center" style="font-family: Roboto, sans-serif; height: 100%;">
    <div class="border day_back_head rounded p-5" style="min-width: 35vw;">
        <h4 class="day_color_font text-center">Recovery profile</h4>
        <p class="day_color_font text-center text-success">Enter you email, and checked link to reset password!</p>
        <hr />
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                @*<label asp-for="Input.Email"></label>*@
                <input asp-for="Input.Email" class="form-control" placeholder="Enter email"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn day_back_main text-light pl-4 mr-4 pr-4" style="font-size: 14px; margin-top: 1rem;">Next</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
