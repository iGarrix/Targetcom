@page
@model LoginModel

@{
    ViewData["Title"] = "Welcome";
}

<style>
    .gap {
        gap: 1rem;
    }
    .rulebtn {
        font-size: 18px;
        color: #1e8cdc;
        border-bottom: 2px solid transparent;
        padding: 0 .2rem;
    }
    .rulebtn:hover {
        text-decoration: none;
        color: #1e8cdc;
        border-bottom: 2px dashed #1e8cdc;
    }
</style>
@if (!User.Identity.IsAuthenticated)
{
<div class="gap d-flex gap day_color_font" style="font-family: 'Roboto', sans-serif;">
    <div style="width: 65%" class="gap d-flex flex-column">
        <div class="border-0 p-4 day_back_head overflow-auto rounded">
            <h4 class="m-0 day_color_font font-weight-normal">Add new friends</h4>
            <hr />
            <div class="d-flex justify-content-between">
                <img src="https://img.icons8.com/bubbles/2x/friends.png" alt="Friends" class="m-0" width="128" height="128" />
                <img src="https://img.icons8.com/bubbles/2x/connected-people.png" alt="Friends" class="m-0" width="128" height="128" />
                <img src="https://img.icons8.com/bubbles/2x/people-group-bill.png" alt="Friends" class="m-0" width="128" height="128" />
                <img src="https://img.icons8.com/bubbles/2x/meeting-room.png" alt="Friends" class="m-0" width="128" height="128" />
            </div>
        </div>
        <div class="border-0 p-4 day_back_head overflow-auto rounded">
            <h4 class="m-0 day_color_font font-weight-normal">Chat with friends</h4>
            <hr />
            <div class="d-flex justify-content-between">
                <img src="https://png.pngtree.com/png-vector/20191026/ourlarge/pngtree-talking-men-vector-laughing-friends-office-colleagues-communicating-male-meeting-conversation-png-image_1847191.jpg" alt="Chat" class="m-0" width="128" height="128" />
                <img src="https://i.pinimg.com/564x/b3/70/1f/b3701fa4e516a5e6a7944a63ffff781c.jpg" alt="Chat" class="m-0" width="128" height="128" />
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTD-EejwYPjz0gsLq16-4ReNPuyjddALE-KDg&usqp=CAU" alt="Chat" class="m-0" width="128" height="128" />
                <img src="https://i.pinimg.com/736x/c0/56/ab/c056abd5fc67bcfa9ceb42054605ff4e.jpg" alt="Chat" class="m-0" width="128" height="128" />
            </div>
        </div>
    </div>
    <div style="width: 35%">
        <form id="account" method="post" style="display:grid" class="gap">
            <div class="border-0 rounded day_back_head p-4">
                <div>
                    @*<label asp-for="Input.Email"></label>*@
                    <input asp-for="Input.Email" class="form-control day_back_default day_color_font border-0" placeholder="Email address" style="font-size: 14px;" />
                    <span asp-validation-for="Input.Email" class="text-danger" style="font-size: 14px;"></span>
                </div>
                <div class="mt-3">
                    @*<label asp-for="Input.Password"></label>*@
                    <input asp-for="Input.Password" class="form-control day_back_default day_color_font border-0" placeholder="Password" style="font-size: 14px;" />
                    <span asp-validation-for="Input.Password" class="text-danger" style="font-size: 14px;"></span>
                </div>
                <div class="form-group" hidden>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="d-flex align-items-center mt-4">
                    <button type="submit" class="btn day_back_main text-light mr-4 pl-4 pr-4" style="font-size: 14px;">Log in</button>
                    <p class="m-0"> 
                        <a id="forgot-password" asp-page="./ForgotPassword" class="day_color_main" style="font-size: 14px;">Forgot password?</a>
                    </p>
                </div>
            </div>
            <div class="border-0 rounded day_back_head p-4">
                <div class="gap" style="display: grid;">
                    <p class="m-0">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="day_color_main" style="font-size: 14px;">Forgot your password?</a>
                    </p>
                    <p class="m-0">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="day_color_main" style="font-size: 14px;">Register as a new user?</a>
                    </p>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
