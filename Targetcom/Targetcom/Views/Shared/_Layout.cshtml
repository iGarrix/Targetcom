@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{ 
    Profile profile = await UserManager.GetUserAsync(User) as Profile;
    if (profile is null)
    {
        profile = new Profile();
    }
}

