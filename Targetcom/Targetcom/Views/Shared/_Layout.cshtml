@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{ Profile profile = await UserManager.GetUserAsync(User) as Profile; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @if (!User.Identity.IsAuthenticated)
    {
        <title>@ViewData["Title"] - Target</title>

    }
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/ThemeColors.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        img {
            object-fit: cover;
        }
    </style>
</head>
<body class="day_back_default">
    <style>
        .gap {
            gap: 1rem;
        }

        .bars1 svg, .bars1 {
            font-family: 'Poppins', sans-serif;
            letter-spacing: .5px;
            font-weight: normal;
            font-size: 14px;
            color: #9b9b9b;
        }

        .bars1:hover {
            text-decoration: none;
        }

            .bars1:hover svg, .bars1 {
                color: #5181b8;
            }           

        #searcher, #searcher:active, #searcher:hover {
            outline: 0 !important;
        }

        .targetbar:active {
            transform: translateY(1.5px);
        }
    </style>
    <header class="position-fixed w-100" style="z-index:100;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light day_back_head border-bottom box-shadow p-0 day_color_font" style="font-family: 'Poppins', sans-serif;">
            <div class="container m-auto" style="max-width: 75%;">
                <a class="navbar-brand d-flex align-items-center targetbar" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight: 800; font-size: 18px; height: 54px;">
                    <i class="fas fa-tenge day_color_main mr-2" style="font-size: 25px;"></i> @Env.WebName.ToUpper()
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav d-flex gap" style="margin-left: 10%;">
                            <li class="nav-item">
                                <div class="input-group day_back_default rounded-pill pt-1 pb-1">
                                    <div class="input-group-prepend ">
                                        <span class="input-group-text bg-transparent p-2 border-0" id="basic-addon1"><i class="fas fa-search text-muted" style="font-size: 14px;"></i></span>
                                    </div>
                                    <input type="text" id="searcher" class="day_back_default border-0 rounded-pill" placeholder="Search people, friends ..." aria-describedby="basic-addon1" style="font-size: 14px;">
                                </div>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Music" asp-action="Index" class="bars1 text-dark d-flex align-items-center pt-2 overflow-hidden" style="max-width: 17rem; white-space:nowrap;">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-music-note-beamed pr-1" viewBox="0 0 16 16">
                                        <path d="M6 13c0 1.105-1.12 2-2.5 2S1 14.105 1 13c0-1.104 1.12-2 2.5-2s2.5.896 2.5 2zm9-2c0 1.105-1.12 2-2.5 2s-2.5-.895-2.5-2 1.12-2 2.5-2 2.5.895 2.5 2z" />
                                        <path fill-rule="evenodd" d="M14 11V2h1v9h-1zM6 3v10H5V3h1z" />
                                        <path d="M5 2.905a1 1 0 0 1 .9-.995l8-.8a1 1 0 0 1 1.1.995V3L5 4V2.905z" />
                                    </svg>
                                    @profile.MusicListening
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Vip" asp-action="Coins" class="bars1 d-flex align-items-center pt-2" style="font-family: Poppins, sans-serif;">@profile.TargetCoins coins</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <partial name="_LoginPartial" model="profile" />
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item ml-auto">
                                <a class="nav-link text-dark d-flex align-items-center" style="font-family: Poppins, sans-serif;">Welcome <i class="fas fa-grin ml-2 day_color_main" style="font-size: 25px;"></i></a>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container m-auto" style="max-width: 75%; padding-top: 1rem; padding-bottom: 1rem;">
        <div style="height: 54px;"></div>
        <div>
            @RenderBody()
        </div>
    </div>

    <footer class="footer text-muted bg-transparent">
        <div class="container m-auto d-flex justify-content-between" style="max-width: 75%;">
            <p class="m-0">TARGET.COM <span style="font-size: 14px;">&copy;</span> 2021 - More...</p>
            <p class="m-0">SOCIAL WEB-SITE</p>
            <p class="m-0">PRIMARY 30 DAYS - FREE ALL</p>
            <p class="m-0">ASP.NET DEVELOPMENT</p>
            <p class="m-0">API IN FUTURE TIME</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
