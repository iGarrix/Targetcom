                            {
                                <div class="d-flex">
                                    <p class="text-muted m-0" style="width: 12rem;">Birthday:</p>
                                    <p class="day_color_main ml-2 m-0">@Model.FindedProfile.Age.ToString("dddd, dd MMMM")</p>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex">
                                    <p class="text-muted m-0" style="width: 12rem;">Birthday:</p>
                                    <p class="day_color_main ml-2 m-0">@Model.FindedProfile.Age.ToString("dddd, dd MMMM yyyy")</p>
                                </div>
                            }
                            @if (Model.FindedProfile.JobGeoplace != null)
                            {
                                @if (Model.FindedProfile.JobGeoplace.Length > 0)
                                {
                                    <div class="d-flex">
                                        <p class="text-muted m-0" style="width: 12rem;">Job place:</p>
                                        <p class="day_color_main ml-2 m-0">@Model.FindedProfile.JobGeoplace</p>
                                    </div>
                                }
                            }
                            <hr style="height: 2px; width: 100%;" />
                        }
                        <div class="viewalldata disable">
                            @if (Model.FindedProfile.VisibilityAboutMe || Model.MyRole == Env.AdminRole || Model.MyRole == Env.ModerRole)
                            {
                                @if (Model.FindedProfile.Status != null)
                                {
                                    @if (Model.FindedProfile.Status.Length > 0)
                                    {
                                        <div class="d-flex">
                                            <p class="text-muted m-0" style="width: 12rem;">Status:</p>
                                            <p class="day_color_main ml-2 m-0">@Model.FindedProfile.Status</p>
                                        </div>
                                    }
                                }
                                @if (Model.FindedProfile.StudyGeoplace != null)
                                {
                                    @if (Model.FindedProfile.StudyGeoplace.Length > 0)
                                    {
                                        <div class="d-flex">
                                            <p class="text-muted m-0" style="width: 12rem;">Study place:</p>
                                            <p class="day_color_main ml-2 m-0">@Model.FindedProfile.StudyGeoplace</p>
                                        </div>
                                        <br />
                                    }
                                }
                                <div class="d-flex">
                                    <p class="text-muted m-0" style="width: 12rem;">Coins:</p>
                                    <p class="day_color_main ml-2 m-0">@Model.FindedProfile.TargetCoins</p>
                                </div>
                                <br />
                                <div class="d-flex">
                                    <p class="text-muted m-0" style="width: 12rem;">Genger:</p>
                                    <p class="day_color_main ml-2 m-0">@Model.FindedProfile.Gender</p>
                                </div>
                                @if (Model.FindedProfile.Hobbies != null)
                                {
                                    @if (Model.FindedProfile.Hobbies.Length > 0)
                                    {
                                        <div class="d-flex">
                                            <p class="text-muted m-0" style="width: 12rem;">Hobbies:</p>
                                            <p class="day_color_main ml-2 m-0">@Model.FindedProfile.Hobbies</p>
                                        </div>
                                    }
                                }
                                <hr style="height: 2px; width: 100%;" />

                            }
                            @if (Model.FindedProfile.VisibilityCommerceData || Model.MyRole == Env.AdminRole || Model.MyRole == Env.ModerRole)
                            {

                                @if (Model.FindedProfile.PhoneNumber != null)
                                {
                                    @if (Model.FindedProfile.PhoneNumber.Length > 0)
                                    {
                                        <div class="d-flex">
                                            <p class="text-muted m-0" style="width: 12rem;">Number:</p>
                                            <p class="day_color_main ml-2 m-0">@Model.FindedProfile.PhoneNumber</p>
                                        </div>
                                    }
                                }
                                @if (Model.FindedProfile.Email != null)
                                {
                                    if (Model.FindedProfile.Email.Length > 0)
                                    {
                                        <div class="d-flex">
                                            <p class="text-muted m-0" style="width: 12rem;">Email:</p>
                                            <p class="day_color_main ml-2 m-0">@Model.FindedProfile.Email</p>
                                        </div>
                                    }
                                }
                                <hr style="height: 2px; width: 100%;" />
                            }
                        </div>
                        @if (Model.FindedProfile.VisibilityAboutMe || Model.FindedProfile.VisibilityCommerceData || Model.MyRole == Env.AdminRole || Model.MyRole == Env.ModerRole)
                        {
                            <a href="#" class="viewallbtn rounded day_color_main p-2 text-center">View all</a>
                            <script>
                                document.querySelector(".viewallbtn").addEventListener("click", () => {
                                    document.querySelector(".viewalldata").classList.toggle("disable");
                                });
                            </script>
                        }
                    }
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-around" style="font-family: Poppins, sans-serif;">
                        @if (Model.FindedProfile.VisibilityFriends || Model.MyRole == Env.AdminRole || Model.MyRole == Env.ModerRole)
                        {
                            <a asp-controller="Friends" asp-action="Index" class="d-flex flex-column align-items-center"><span class="day_color_main" style="font-size: 18px;">25</span> <span class="text-muted">Friends</span></a>
                        }
                        @if (Model.FindedProfile.VisibilitySubscribers || Model.MyRole == Env.AdminRole || Model.MyRole == Env.ModerRole)
                        {
                            <a asp-controller="Friends" asp-action="Subscribers" class="d-flex flex-column align-items-center"><span class="day_color_main" style="font-size: 18px;">135</span> <span class="text-muted">Subscribers</span></a>
                        }
                        @if (Model.FindedProfile.Privacy == Env.PublicProfile)
                        {
                            @if (Model.FindedProfile.VisibilityImages || Model.MyRole == Env.AdminRole || Model.MyRole == Env.ModerRole)
                            {
                                <a asp-controller="Images" asp-action="Index" class="d-flex flex-column align-items-center"><span class="day_color_main" style="font-size: 18px;">745</span> <span class="text-muted">Images</span></a>
                            }
                            @if (Model.FindedProfile.VisibilityPlaylist || Model.MyRole == Env.AdminRole || Model.MyRole == Env.ModerRole)
                            {
                                <a asp-controller="Songs" asp-action="Index" class="d-flex flex-column align-items-center"><span class="day_color_main" style="font-size: 18px;">1104</span> <span class="text-muted">Songs</span></a>
                            }
                        }
                    </div>
                </div>
            </div>
            @if (Model.FindedProfile.Privacy == Env.PublicProfile || Model.MyRole == Env.AdminRole || Model.MyRole == Env.ModerRole)
            {
                if (!Model.FindedProfile.IsNessessaredPublishPost || Model.MyRole == Env.AdminRole || Model.MyRole == Env.ModerRole)
                {
                    @using (Html.BeginForm(FormMethod.Post))
                    {
                        <div class="card border-0 day_back_head overflow-auto rounded">
                            <div class="card-body p-2">
                                <textarea class="form-control item-font m-0 rounded-0 border-0" id="summer" name="content" placeholder="Tell us what's new?"></textarea>
                            </div>
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    @if (Model.IdentityProfile.UrlAvatar == Targetcom.Env.DefaultImageUrl)
                                    {
                                        <img src="@Env.DefaultImageUrl" alt="Avatar" class="img-card rounded-circle" style="width: 38px; height: 38px;" />
                                    }
                                    else
                                    {
                                        <img src="@Model.IdentityProfile.UrlAvatar" alt="Avatar" class="img-card rounded-circle" style="width: 38px; height: 38px; " />
                                    }
                                    <div class="d-flex flex-column ml-2">
                                        <p class="m-0 day_color_main" style="font-size: 14px;">
                                            @Model.IdentityProfile.Name
                                            @Model.IdentityProfile.Surname
                                            @if (Model.IdentityProfile.IsVerify)
                                            {
                                                <i class="fas fa-check" style="font-size: 13px;"></i>
                                            }
                                        </p>
                                    </div>
                                </div>
                                <div>
                                    <button type="submit" class="btn day_back_main text-light pl-4 pr-4 disable" style="font-size: 14px;" id="publishpost" asp-controller="Friends" asp-action="PublishPost" asp-route-Id="@Model.FindedProfile.Id">Publish</button>
                                    <script>
                                        document.getElementById("summer").addEventListener("keyup", () => {
                                            if (document.getElementById("summer").value.length > 0) {
                                                document.getElementById("publishpost").classList.remove("disable");
                                            }
                                            else {
                                                document.getElementById("publishpost").classList.add("disable");
                                            }
                                        });
                                    </script>
                                </div>
                            </div>
                        </div>
                    }
                }
                <div class="d-flex">
                    <div class="tabs" style="width: 100%">

                        <input type="radio" id="tab1" name="tab-control" checked>
                        <input type="radio" id="tab2" name="tab-control">
                        <ul>
                            @if (Model.FindedProfile.VisibilityPostage)
                            {
                                <li title="All Post">
                                    <label for="tab1" role="button">
                                        <i class="far fa-newspaper"></i>
                                        All Post
                                    </label>
                                </li>
                            }
                            @if (Model.FindedProfile.VisibilitySharePostage)
                            {
                                <li title="Shared post">
                                    <label for="tab2" role="button">
                                        <i class="fas fa-share-alt"></i>
                                        Shared Post
                                    </label>
                                </li>
                            }
                        </ul>

                        @if (Model.FindedProfile.VisibilityPostage && Model.FindedProfile.VisibilitySharePostage)
                        {
                            <div class="slider"><div class="indicator"></div></div>
                        }
                        else
                        {
                            <div style="margin-bottom: .6rem;"></div>
                        }
                        <div class="content">
                            @if (Model.FindedProfile.VisibilityPostage)
                            {
                                <section>
                                    @if (Model.FindedProfile.ProfilePostages.OrderByDescending(i => i.TimeStamp).Count() == 0)
                                    {
                                        <div class="d-flex rounded shadow-sm align-content-center justify-content-center day_back_head p-3 pt-5 pb-5">
                                            <i class="fas fa-globe text-primary" style="font-size: 30px;"></i>
                                            <h4 class="m-0 text-muted ml-2">Doenst exists post</h4>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex flex-column gap">
                                            @foreach (var item in Model.FindedProfile.ProfilePostages.OrderByDescending(i => i.TimeStamp))
                                            {
                                                var id = $"item{item.Id}";
                                                <div class="card border-0 day_back_head rounded" style="font-size: 14px;">
                                                    <div class="card-body p-3 d-flex flex-column position-relative">
                                                        <div class="d-flex align-items-center">
                                                            <img src="@item.Writter.UrlAvatar" alt="Avatar" class="img-card rounded-circle" style="width: 38px; height: 38px; object-fit: cover;" />
                                                            <div class="d-flex flex-column ml-2">
                                                                <div class="d-flex">
                                                                    <a class="text-primary" style="white-space:nowrap; cursor:pointer;">
                                                                        @item.Writter.Name @item.Writter.Surname
                                                                        @if (item.Profile.IsVerify)
                                                                        {
                                                                            <i class="fas fa-check day_color_main ml-1" style="font-size: 11px;"></i>
                                                                        }
                                                                    </a>
                                                                    <p class="m-0 ml-2 text-muted">@item.Alert</p>
                                                                </div>
                                                                <p class="m-0 text-muted">@item.TimeStamp.ToString("MM.dd.yyyy")</p>
                                                            </div>
                                                            @if (item.WritterId == Model.IdentityProfile.Id)
                                                            {
                                                                <div class="ml-auto" style="font-family:Poppins, sans-serif; font-size: 14px;">
                                                                    <div class="dropdown">
