                                                                        <div class="dropdown-content day_back_head rounded p-2 shadow">
                                                                            @using (Html.BeginForm(FormMethod.Post))
                                                                            {
                                                                                <button type="submit" class="btn-link border-0 bg-transparent" asp-controller="Friends" asp-action="DeletePostagePost" asp-route-id="@item.Id" style="outline:0!important;">Delete post</button>
                                                                            }
                                                                  
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                        </div>
                                                        @if (item.IsObject)
                                                        {
                                                            <img src="@item.Content" alt="Avatar" class="rounded mb-3 mt-3" style="max-width: 300px; max-height: 300px;" />
                                                        }
                                                        else
                                                        {
                                                            <p class="mb-2 mt-2">@item.Content</p>
                                                        }
                                                        <hr class="m-0" style="width: 100%;" />
                                                        @using (Html.BeginForm(FormMethod.Post))
                                                        {
                                                            <div class="d-flex mt-3 align-items-center">
                                                                @if (!Model.FindedProfile.IsNessessaredLikedPost)
                                                                {
                                                                    @if (!item.IsNessessaredLikedPost)
                                                                    {
                                                                        if (item.LikedProfiles.FirstOrDefault(i => i.ProfileId == Model.IdentityProfile.Id) != null)
                                                                        {
                                                                            <button type="submit" class="btn-link border-0 bg-transparent text-danger d-flex align-items-center text-decoration-none" asp-controller="Friends" asp-action="DislikePostagePost" asp-route-id="@item.LikedProfiles.FirstOrDefault(i => i.ProfileId == Model.IdentityProfile.Id).ProfileId" style="outline:0!important;">
                                                                                <i class="fas fa-heart"></i>
                                                                                @if (item.LikedProfiles.Count != 0)
                                                                                {
                                                                                    <strong class="ml-1">@item.LikedProfiles.Count</strong>
                                                                                }
                                                                            </button>
                                                                        }
                                                                        else
                                                                        {
                                                                            <button type="submit" class="btn-link border-0 bg-transparent d-flex align-items-center text-decoration-none" asp-controller="Friends" asp-action="LikePostagePost" asp-route-id="@item.Id" style="outline:0!important;">
                                                                                <i class="far fa-heart"></i>
                                                                                @if (item.LikedProfiles.Count != 0)
                                                                                {
                                                                                    <strong class="ml-1">@item.LikedProfiles.Count</strong>
                                                                                }
                                                                            </button>
                                                                        }
                                                                    }
                                                                }
                                                                @if (!Model.FindedProfile.IsNessessaredCommentedPost)
                                                                {
                                                                    @if (!item.IsNessessaredCommentedPost)
                                                                    {
                                                                        @if (item.IsObject)
                                                                        {
                                                                            <a class="btn-link border-0 text-primary bg-transparent d-flex align-items-center text-decoration-none ml-4"
                                                                               style="outline:0!important;"
                                                                               data-toggle="modal" data-target="#@id">
