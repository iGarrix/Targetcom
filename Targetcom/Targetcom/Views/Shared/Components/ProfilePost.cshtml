                                {
                                    <strong class="ml-1 m-0 text-muted">@Model.Postage.ProfilePostageComments.Count</strong>
                                }
                            </a>
                        </div>
                        <div class="modal fade" id="tips-@Model.Guid.ToString()" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-body p-0 d-flex border-0 rounded" style="height: 400px;">
