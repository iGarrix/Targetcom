                                                {
                                                    <div class="d-flex" style="width: 100%;">
                                                        <img src="@Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.UrlAvatar" class="rounded-circle border-0" alt="Avatar" style="width: 38px; height: 38px;" />
                                                        <div class="d-flex flex-column ml-2" style="width: 100%;">
                                                            <div class="d-flex">
                                                                @if (Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.Id == Model.IdentityProfile.Id)
                                                                {
                                                                    <a class="m-0 day_color_main" asp-controller="Profile" asp-action="Index" style="cursor: pointer;">
                                                                        @Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.Name @Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.Surname
                                                                        @if (Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.IsVerify)
                                                                        {
                                                                            <i class="fas fa-check day_color_main ml-1" style="font-size: 10px;"></i>
                                                                        }
                                                                    </a>
                                                                }
                                                                else
                                                                {
                                                                    <a class="m-0 day_color_main" asp-controller="Friends" asp-action="ViewProfile" asp-route-id="@Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.Id" style="cursor: pointer;">
                                                                        @Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.Name @Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.Surname
                                                                        @if (Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.IsVerify)
                                                                        {
                                                                            <i class="fas fa-check day_color_main ml-1" style="font-size: 10px;"></i>
                                                                        }
                                                                    </a>
                                                                }
                                                                @if (Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.IsVerify)
                                                                {
                                                                    <p class="m-0 text-muted">@Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].TimeStamp.ToString("dd.MM.yyyy")</p>
                                                                }
                                                                else
                                                                {
                                                                    <p class="m-0 ml-2 text-muted">@Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].TimeStamp.ToString("dd.MM.yyyy")</p>
                                                                }
                                                                <div class="ml-auto" style="font-family:Poppins, sans-serif; font-size: 16px;">
                                                                    @if (Model.Postage.ProfileId == Model.IdentityProfile.Id)
                                                                    {
                                                                        <div class="dropdown">
                                                                            <a class="dropbtn day_color_main" style="outline:0!important;"><i class="fas fa-ellipsis-h text-muted ml-auto" style="font-size: 16px;"></i></a>
                                                                            <div class="dropdown-content day_back_head rounded p-2 shadow">
                                                                                <button type="submit" class="btn-link day_color_font border-0 bg-transparent" asp-action="DeleteProfilePostageCommentPost" asp-route-id="@Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].Id" style="outline:0!important;">Delete comment</button>
                                                                            </div>
                                                                        </div>
                                                                    }
                                                                    else if (Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentatorId == Model.IdentityProfile.Id)
                                                                    {
                                                                        <div class="dropdown">
                                                                            <a class="dropbtn day_color_main" style="outline:0!important;"><i class="fas fa-ellipsis-h text-muted ml-auto" style="font-size: 16px;"></i></a>
                                                                            <div class="dropdown-content day_back_head rounded p-2 shadow">
                                                                                <button type="submit" class="btn-link day_color_font border-0 bg-transparent" asp-action="DeleteProfilePostageCommentPost" asp-route-id="@Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].Id" style="outline:0!important;">Delete comment</button>
                                                                            </div>
                                                                        </div>
                                                                    }
                                                                </div>
                                                            </div>
                                                            <p class="m-0">@Model.Postage.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].Comment</p>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                            <hr class="mt-2 mb-3 ml-0 mr-0" />
                                            <div class="d-flex gap">
                                                @if (!Model.Postage.IsNessessaredLikedPost)
                                                {
                                                    if (Model.Postage.LikedProfiles.FirstOrDefault(i => i.ProfileId == Model.IdentityProfile.Id) != null)
                                                    {
                                                        <div class="rounded-pill day_back_headlight d-flex justify-content-center align-items-center p-2 hover" style="height: 40px; min-width: 60px">
                                                            <button type="submit" class="btn-link border-0 m-0 bg-transparent text-danger d-flex justify-content-center align-items-center text-decoration-none" asp-action="DislikePostagePost" asp-route-id="@Model.Postage.LikedProfiles.FirstOrDefault(i => i.ProfileId == Model.IdentityProfile.Id).ProfileId" style="outline:0!important;">
                                                                <i class="fas fa-heart d-flex justify-content-center align-items-center m-0" style="font-size: 18px;"></i>
                                                                @if (Model.Postage.LikedProfiles.Count != 0)
                                                                {
                                                                    <strong class="ml-1 m-0 text-danger">@Model.Postage.LikedProfiles.Count</strong>
                                                                }
                                                            </button>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="rounded-pill day_back_headlight d-flex justify-content-center align-items-center p-2 hover" style="height: 40px; min-width: 60px">
                                                            <button type="submit" class="btn-link border-0 bg-transparent d-flex justify-content-center align-items-center text-decoration-none" asp-action="LikePostagePost" asp-route-id="@Model.Postage.Id" style="outline:0!important;">
                                                                <i class="far fa-heart text-muted d-flex justify-content-center align-items-center m-0" style="font-size: 18px;"></i>
                                                                @if (Model.Postage.LikedProfiles.Count != 0)
                                                                {
                                                                    <strong class="ml-1 m-0 text-muted">@Model.Postage.LikedProfiles.Count</strong>
                                                                }
                                                            </button>
                                                        </div>
                                                    }
                                                }
                                                <div class="rounded-pill day_back_headlight d-flex justify-content-center align-items-center p-2 hover"
                                                     style="height: 40px; min-width: 60px">
                                                    <a class="btn-link border-0 day_color_main bg-transparent d-flex justify-content-center align-items-center text-decoration-none"
                                                       style="outline:0!important;">
                                                        <i class="far fa-comment-alt text-muted d-flex justify-content-center align-items-center m-0" style="font-size: 18px;"></i>
                                                        @if (@Model.Postage.ProfilePostageComments.Count > 0)
                                                        {
                                                            <strong class="ml-1 m-0 text-muted">@Model.Postage.ProfilePostageComments.Count</strong>
                                                        }
                                                    </a>
                                                </div>
                                                @if (!Model.Postage.IsNessessaredSharedPost)
                                                {
                                                    if (Model.Postage.ProfileId == Model.IdentityProfile.Id)
                                                    {
                                                        <div class="rounded-pill day_back_headlight d-flex justify-content-center align-items-center p-2 hover" style="height: 40px; min-width: 60px">
                                                            <a class="btn-link border-0 bg-transparent d-flex justify-content-center align-items-center text-decoration-none day_color_main" style="outline:0!important;">
                                                                <i class="fas fa-share-alt text-muted d-flex justify-content-center align-items-center m-0" style="font-size: 18px;"></i>
                                                                @if (Model.Postage.SharedProfiles.Count != 0)
                                                                {
                                                                    <strong class="ml-1 text-muted">@Model.Postage.SharedProfiles.Count</strong>
                                                                }
                                                            </a>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        if (Model.Postage.SharedProfiles.FirstOrDefault(i => i.ProfileId == Model.IdentityProfile.Id) != null)
                                                        {
                                                            <div class="rounded-pill day_back_headlight d-flex justify-content-center align-items-center p-2 hover" style="height: 40px; min-width: 60px">
                                                                <button type="submit" class="btn-link border-0 bg-transparent text-danger d-flex align-items-center text-decoration-none" asp-controller="Home" asp-action="DissharePostagePost" asp-route-id="@Model.Postage.SharedProfiles.FirstOrDefault(i => i.ProfileId == Model.IdentityProfile.Id).ProfileId" style="outline:0!important;">
                                                                    <i class="fas fa-share-alt"></i>
                                                                    @if (Model.Postage.SharedProfiles.Count != 0)
                                                                    {
                                                                        <strong class="ml-1">@Model.Postage.SharedProfiles.Count</strong>
                                                                    }
                                                                </button>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="rounded-pill day_back_headlight d-flex justify-content-center align-items-center p-2 hover" style="height: 40px; min-width: 60px">
                                                                <button type="submit" class="btn-link border-0 bg-transparent d-flex align-items-center text-decoration-none" asp-controller="Home" asp-action="SharePostagePost" asp-route-id="@Model.Postage.Id" style="outline:0!important;">
                                                                    <i class="fas fa-share-alt"></i>
                                                                    @if (Model.Postage.SharedProfiles.Count != 0)
                                                                    {
                                                                        <strong class="ml-1">@Model.Postage.SharedProfiles.Count</strong>
                                                                    }
                                                                </button>
                                                            </div>
                                                        }
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="rounded-pill day_back_headlight d-flex justify-content-center align-items-center p-2 hover"
                             data-toggle="modal" data-target="#tipstext-@Model.Guid.ToString()"
                             style="height: 40px; min-width: 60px">
                            <a class="btn-link border-0 day_color_main bg-transparent d-flex justify-content-center align-items-center text-decoration-none"
                               style="outline:0!important;">
                                <i class="far fa-comment-alt text-muted d-flex justify-content-center align-items-center m-0" style="font-size: 18px;"></i>
                                @if (@Model.Postage.ProfilePostageComments.Count > 0)
                                {
                                    <strong class="ml-1 m-0 text-muted">@Model.Postage.ProfilePostageComments.Count</strong>
                                }
