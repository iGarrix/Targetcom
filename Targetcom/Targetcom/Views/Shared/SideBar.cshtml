<style>
    .gap {
        gap: 1rem;
    }

    i {
        font-size: 20px;
        width: 24px;
    }
    svg {
        width: 24px;
    }

    .bars {
        font-family: 'Poppins', sans-serif;
        letter-spacing: .5px;
        font-weight: normal;
        font-size: 14px;
    }
    .bars:hover {
        text-decoration: none;
        background-color: #e8e8e8;
        border-radius: 2px;
    }
     .night .bars:hover {
            text-decoration: none;
            background-color: #373737;
            border-radius: 2px;
        }
</style>
@model Tuple<int, int>;
<div class="container-fluid p-0 m-0 overflow-hidden" style="width: 15rem">
    <a asp-controller="Profile" asp-action="Index" class="bars day_color_font d-flex align-items-center p-2"> <i class="far fa-user-circle day_color_main mr-2"></i>My profile</a>
    <a asp-controller="Home" asp-action="Index" class="bars day_color_font d-flex align-items-center p-2"> <i class="far fa-newspaper day_color_main mr-2"></i>News</a>
    <a asp-controller="Messanger" asp-action="Index" class="bars day_color_font d-flex align-items-center p-2"> <i class="far fa-comment day_color_main mr-2"></i>Messenger</a>
    <a asp-controller="Friends" asp-action="Index" class="bars day_color_font d-flex align-items-center p-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-people day_color_main mr-2" viewBox="0 0 18 18">
            <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8zm-7.978-1A.261.261 0 0 1 7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002a.274.274 0 0 1-.014.002H7.022zM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0zM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816zM4.92 10A5.493 5.493 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275zM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4z" />
        </svg>Friends 
        @if (Model is not null && Model.Item1 > 0)
        {
            <span class="ml-auto day_color_font day_back_main rounded-circle d-flex align-items-center justify-content-center" style="width: 22px; height: 22px;"><strong>@Model.Item1</strong></span>
        }
    </a>
    <a asp-controller="Images" asp-action="Index" class="bars day_color_font d-flex align-items-center p-2"> <i class="far fa-image day_color_main mr-2"></i>Images</a>
    <a asp-controller="Game" asp-action="Index" class="bars day_color_font d-flex align-items-center p-2"> <i class="fas fa-headset day_color_main mr-2"></i>Games</a>
    <hr class="w-75" />
    <a asp-controller="Vip" asp-action="Index" class="bars day_color_font d-flex align-items-center p-2"> <i class="fas fa-crown mr-2" style="color: #ffad48"></i>Premium</a>
    <a asp-controller="Vip" asp-action="Coins" class="bars day_color_font d-flex align-items-center p-2"> <i class="fas fa-coins mr-2" style="color: #ffad48"></i>Target coins</a>
    <hr class="w-75" />
    <a asp-controller="Home" asp-action="Rules" class="bars day_color_font d-flex align-items-center p-2"> <i class="fas fa-receipt text-primary mr-2"></i>Rules</a>
    <a asp-controller="Help" asp-action="Index" class="bars day_color_font d-flex align-items-center p-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-question-circle text-danger mr-2" viewBox="0 0 18 18">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
            <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z" />
        </svg>Help
    </a>
</div>