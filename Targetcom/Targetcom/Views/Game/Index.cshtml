@{
    ViewData["Title"] = "Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Targetcom.Models.ViewModels.GameVM;
<style>
    .gap {
        gap: 1rem;
    }
    .btngame:hover {
        text-decoration:none;
    }
    .pointer {
        border-top: 0;
        border-left: 0;
        border-right: 0;
        border-bottom: 2px solid white;
    }
</style>
<div class="gap d-flex gap day_color_font" style="font-family: Poppins, sans-serif;">
    <partial name="SideBar" />

    <div style="width: 100%; height: 100%;" class="d-flex flex-column gap">
        <div class="rounded overflow-hidden day_back_head">
            <div class="pt-4 pr-4 pl-4 pb-2">
                <h4>Follow games</h4>
            </div>
            @if (Model.IdentityProfile.FollowGames.Count > 0)
            {
                <div id="carouselExampleCaptions" class="carousel slide bg-dark" data-ride="carousel" style="width: 100%; height: 50vh;">
                    <ol class="carousel-indicators">
                        @for (int i = 0; i < Model.IdentityProfile.FollowGames.Count; ++i)
                        {
                            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                        }
                    </ol>
                    <div class="carousel-inner">
                        @foreach (var item in Model.IdentityProfile.FollowGames)
                        {
                            <a href="#tanki" class="carousel-item active">
                                <img src="@item.ImageUrl" class="rounded d-block w-100" style="height: 50vh; object-fit: cover; filter: opacity(40%)" alt="game" />
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>@item.Name</h5>
                                    <p>@item.Subscribe</p>
                                </div>
                            </a>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            }
            else
            {
                <div class="pr-4 pl-4 pb-4">
                    <div class="alert alert-success m-0">
                        <h5 class="m-0 text-dark">Following games for one</h5>
                    </div>
                </div>
            }
        </div>
        <div class="rounded overflow-hidden day_back_head d-flex flex-column">
            <div class="pt-4 pr-4 pl-4 pb-2">
                <h4>Games for you</h4>
            </div>
            @if (Model.Games.Count() > 0)
            {
                @foreach (var item in Model.Games)
	            {	 
                    <a href="@item.GameUrl" class="position-relative bg-dark btngame" style="width: 100%; height: 30vh;">
                        <img src="@item.ImageUrl" class="rounded d-flex position-absolute" style="height: 30vh; width:100%; object-fit: cover; filter: opacity(20%) blur(2px)" alt="game" />
                        <div class="d-flex align-items-center" style="height: 100%;">
                            <div class="ml-5">
                                <img src="@item.ImageUrl" class="rounded d-flex" style="height: 128px; width:128px; object-fit: cover;" alt="game" />
                            </div>
                            <div class="ml-4 d-flex flex-column">
                                <h5 class="text-light">@item.Name</h5>
                                <p class="text-light">@item.Subscribe</p>
                            </div>
                        </div>
                    </a>
                    <div class="bg-dark">
                        <form method="post">
                            <button class="btn btn-outline-light rounded-0 pointer ml-5" asp-controller="Game" asp-route-Id="@item.Id">Add to Follow</button>
                            <button class="btn btn-outline-light rounded-0 pointer ml-2" asp-controller="Game" asp-route-Id="@item.Id">Remove with Follow</button>
                        </form>
                    </div>                
	            }
            }
            else
            {
                <div class="pr-4 pl-4 pb-4">
                    <div class="alert alert-warning m-0">
                        <h5 class="m-0 text-dark">Game is not found</h5>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

