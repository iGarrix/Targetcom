                                                        <div class="d-flex">
                                                            @if (item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.Id == Model.IdentityProfile.Id)
                                                            {
                                                                <a class="m-0 day_color_main" asp-controller="Profile" asp-action="Index" style="cursor: pointer;">
                                                                    @item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.Name @item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.Surname
                                                                    @if (item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.IsVerify)
                                                                    {
                                                                        <i class="fas fa-check day_color_main ml-1" style="font-size: 10px;"></i>
                                                                    }
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a class="m-0 day_color_main" asp-controller="Friends" asp-action="ViewProfile" asp-route-id="@item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.Id" style="cursor: pointer;">
                                                                    @item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.Name @item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.Surname
                                                                    @if (item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.IsVerify)
                                                                    {
                                                                        <i class="fas fa-check day_color_main ml-1" style="font-size: 10px;"></i>
                                                                    }
                                                                </a>
                                                            }
                                                            @if (item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentator.IsVerify)
                                                            {
                                                                <p class="m-0 text-muted">@item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].TimeStamp.ToString("dd.MM.yyyy")</p>
                                                            }
                                                            else
                                                            {
                                                                <p class="m-0 ml-2 text-muted">@item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].TimeStamp.ToString("dd.MM.yyyy")</p>
                                                            }
                                                            <div class="ml-auto" style="font-family:Poppins, sans-serif; font-size: 14px;">
                                                                @if (item.ProfileId == Model.IdentityProfile.Id)
                                                                {
                                                                    <div class="dropdown">
                                                                        <a class="dropbtn day_color_main" style="outline:0!important;"><i class="fas fa-ellipsis-h text-muted ml-auto" style="font-size: 18px;"></i></a>
                                                                        <div class="dropdown-content day_back_head rounded p-2 shadow">
                                                                            <button type="submit" class="btn-link day_color_font border-0 bg-transparent" asp-action="DeleteProfilePostageCommentPost" asp-route-id="@item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].Id" style="outline:0!important;">Delete comment</button>
                                                                        </div>
                                                                    </div>
                                                                }
                                                                else if (item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].ProfileCommentatorId == Model.IdentityProfile.Id)
                                                                {
                                                                    <div class="dropdown">
                                                                        <a class="dropbtn day_color_main" style="outline:0!important;"><i class="fas fa-ellipsis-h text-muted ml-auto" style="font-size: 18px;"></i></a>
                                                                        <div class="dropdown-content day_back_head rounded p-2 shadow">
                                                                            <button type="submit" class="btn-link day_color_font border-0 bg-transparent" asp-action="DeleteProfilePostageCommentPost" asp-route-id="@item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].Id" style="outline:0!important;">Delete comment</button>
                                                                        </div>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                        <p class="m-0">@item.ProfilePostageComments.OrderByDescending(e => e.TimeStamp).ToList()[comment].Comment</p>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        <hr class="mt-2 mb-3 ml-0 mr-0" />
                                        <div class="d-flex gap">
                                            @if (!item.IsNessessaredLikedPost)
                                            {
                                                if (item.LikedProfiles.FirstOrDefault(i => i.ProfileId == Model.IdentityProfile.Id) != null)
                                                {
                                                    <div class="rounded-pill day_back_headlight d-flex justify-content-center align-items-center p-2 hover" style="height: 40px; min-width: 60px">
                                                        <button type="submit" class="btn-link border-0 m-0 bg-transparent text-danger d-flex justify-content-center align-items-center text-decoration-none" asp-action="DislikePostagePost" asp-route-id="@item.LikedProfiles.FirstOrDefault(i => i.ProfileId == Model.IdentityProfile.Id).ProfileId" style="outline:0!important;">
                                                            <i class="fas fa-heart d-flex justify-content-center align-items-center m-0" style="font-size: 18px;"></i>
                                                            @if (item.LikedProfiles.Count != 0)
                                                            {
                                                                <strong class="ml-1 m-0 text-danger">@item.LikedProfiles.Count</strong>
                                                            }
                                                        </button>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="rounded-pill day_back_headlight d-flex justify-content-center align-items-center p-2 hover" style="height: 40px; min-width: 60px">
                                                        <button type="submit" class="btn-link border-0 bg-transparent d-flex justify-content-center align-items-center text-decoration-none" asp-action="LikePostagePost" asp-route-id="@item.Id" style="outline:0!important;">
                                                            <i class="far fa-heart text-muted d-flex justify-content-center align-items-center m-0" style="font-size: 18px;"></i>
                                                            @if (item.LikedProfiles.Count != 0)
                                                            {
                                                                <strong class="ml-1 m-0 text-muted">@item.LikedProfiles.Count</strong>
                                                            }
                                                        </button>
                                                    </div>
                                                }
                                            }
                                            <div class="rounded-pill day_back_headlight d-flex justify-content-center align-items-center p-2 hover"
                                                 style="height: 40px; min-width: 60px">
                                                <a class="btn-link border-0 day_color_main bg-transparent d-flex justify-content-center align-items-center text-decoration-none"
                                                   style="outline:0!important;">
                                                    <i class="far fa-comment-alt text-muted d-flex justify-content-center align-items-center m-0" style="font-size: 18px;"></i>
                                                    @if (@item.ProfilePostageComments.Count > 0)
                                                    {
                                                        <strong class="ml-1 m-0 text-muted">@item.ProfilePostageComments.Count</strong>
                                                    }
                                                </a>
                                            </div>
                                            @if (!item.IsNessessaredSharedPost)
                                            {
                                                if (item.ProfileId == Model.IdentityProfile.Id)
                                                {
                                                    <div class="rounded-pill day_back_headlight d-flex justify-content-center align-items-center p-2 hover" style="height: 40px; min-width: 60px">
                                                        <a class="btn-link border-0 bg-transparent d-flex justify-content-center align-items-center text-decoration-none day_color_main" style="outline:0!important;">
                                                            <i class="fas fa-share-alt text-muted d-flex justify-content-center align-items-center m-0" style="font-size: 18px;"></i>
                                                            @if (item.SharedProfiles.Count != 0)
                                                            {
                                                                <strong class="ml-1 text-muted">@item.SharedProfiles.Count</strong>
                                                            }
                                                        </a>
                                                    </div>
                                                }
                                                else
                                                {
                                                    if (item.SharedProfiles.FirstOrDefault(i => i.ProfileId == Model.IdentityProfile.Id) != null)
                                                    {
                                                        <div class="rounded-pill day_back_headlight d-flex justify-content-center align-items-center p-2 hover" style="height: 40px; min-width: 60px">
                                                            <button type="submit" class="btn-link border-0 bg-transparent text-danger d-flex align-items-center text-decoration-none" asp-controller="Home" asp-action="DissharePostagePost" asp-route-id="@item.SharedProfiles.FirstOrDefault(i => i.ProfileId == Model.IdentityProfile.Id).ProfileId" style="outline:0!important;">
                                                                <i class="fas fa-share-alt"></i>
                                                                @if (item.SharedProfiles.Count != 0)
                                                                {
                                                                    <strong class="ml-1">@item.SharedProfiles.Count</strong>
                                                                }
                                                            </button>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="rounded-pill day_back_headlight d-flex justify-content-center align-items-center p-2 hover" style="height: 40px; min-width: 60px">
                                                            <button type="submit" class="btn-link border-0 bg-transparent d-flex align-items-center text-decoration-none" asp-controller="Home" asp-action="SharePostagePost" asp-route-id="@item.Id" style="outline:0!important;">
                                                                <i class="fas fa-share-alt"></i>
                                                                @if (item.SharedProfiles.Count != 0)
                                                                {
                                                                    <strong class="ml-1">@item.SharedProfiles.Count</strong>
                                                                }
                                                            </button>
                                                        </div>
                                                    }
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                        }
                        @using (Html.BeginForm(FormMethod.Post))
                        {
                            @if (!item.Profile.IsNessessaredSharedPost)
                            {
                                if (!item.IsNessessaredSharedPost)
                                {
                                    if (item.SharedProfiles.FirstOrDefault(i => i.ProfileId == Model.IdentityProfile.Id) != null)
                                    {
                                        <div class="rounded-pill day_back_head d-flex justify-content-center align-items-center p-2 hover position-relative post" style="height: 40px; min-width: 60px">
                                            <button type="submit" class="btn-link text-danger border-0 bg-transparent text-danger d-flex align-items-center text-decoration-none" asp-controller="Friends" asp-action="DissharePostagePost" asp-route-id="@item.SharedProfiles.FirstOrDefault(i => i.ProfileId == Model.IdentityProfile.Id).ProfileId" style="outline:0!important;">
                                                <i class="fas fa-share-alt text-danger"></i>
                                                @if (item.SharedProfiles.Count != 0)
                                                {
                                                    <strong class="ml-1">@item.SharedProfiles.Count</strong>
                                                    <div class="position-absolute rounded-pill day_back_headlight pt-1 pb-1 pr-2 pl-2 likes gap shadow" style="top: -60px; left:0;">
                                                        @foreach (var like in item.SharedProfiles.Take(3))
                                                        {
                                                            <img src="@like.Profile.UrlAvatar" class="rounded-circle" style="width: 38px; height: 38px;" />
                                                        }
                                                    </div>
                                                }
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="rounded-pill day_back_head d-flex justify-content-center align-items-center p-2 hover position-relative post" style="height: 40px; min-width: 60px">
                                            <button type="submit" class="btn-link text-primary border-0 bg-transparent text-danger d-flex align-items-center text-decoration-none" asp-controller="Friends" asp-action="SharePostagePost" asp-route-id="@item.Id" style="outline:0!important;">
                                                <i class="fas fa-share-alt text-primary"></i>
                                                @if (item.SharedProfiles.Count != 0)
                                                {
                                                    <strong class="ml-1 text-muted">@item.SharedProfiles.Count</strong>
                                                    <div class="position-absolute rounded-pill day_back_headlight pt-1 pb-1 pr-2 pl-2 likes gap shadow" style="top: -60px; left:0;">
                                                        @foreach (var like in item.SharedProfiles.Take(3))
                                                        {
                                                            <img src="@like.Profile.UrlAvatar" class="rounded-circle" style="width: 38px; height: 38px;" />
                                                        }
                                                    </div>
                                                }
                                            </button>
                                        </div>
                                    }
                                }
                            }
                        }
                    </div>
                </div>
                }
            </div>
        </div>
        <div class="p-2 d-flex justify-content-center mt-auto">
            @if (Model.Current_AllPost_Page > 0)
            {
                <a asp-controller="Friends" asp-action="Images" asp-route-id="@Model.FindedProfile.Id" asp-route-page="@(Model.Current_AllPost_Page - 1)" class="p-3 d-flex align-items-center text-decoration-none text-light day_back_main rounded border-0 navbtn"><i class="fas fa-arrow-left m-0 mr-2"></i>Prev</a>
            }
            @if ((Model.Current_AllPost_Lenght / Env.IMAGE_LOADING_LIMIT) > Model.Current_AllPost_Page)
            {
                <a asp-controller="Friends" asp-action="Images" asp-route-id="@Model.FindedProfile.Id" asp-route-page="@(Model.Current_AllPost_Page + 1)" class="p-3 d-flex align-items-center text-decoration-none text-light day_back_main rounded border-0 ml-3 navbtn">Next <i class="fas fa-arrow-right m-0 ml-2"></i></a>
            }
        </div>
    </div>
</div>
