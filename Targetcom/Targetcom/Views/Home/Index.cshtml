                                                                                    <i class="far fa-heart"></i>
                                                                                    @if (item.LikedProfiles.Count != 0)
                                                                                    {
                                                                                        <strong class="ml-1">@item.LikedProfiles.Count</strong>
                                                                                    }
                                                                                </button>
                                                                            }
                                                                        }
                                                                        <a class="btn-link border-0 day_color_main bg-transparent d-flex align-items-center text-decoration-none ml-4"
                                                                           style="outline:0!important;">
                                                                            <i class="far fa-comment-alt"></i>
