                            document.querySelector(".viewallbtn").addEventListener("click", () => {
                                document.querySelector(".viewalldata").classList.toggle("disable");
                            });
                        </script>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-around" style="font-family: Poppins, sans-serif;">
                            <a asp-controller="Friends" asp-action="Index" class="d-flex flex-column align-items-center">
                                <span class="day_color_main" style="font-size: 18px;">
                                    @Model.IdentityProfile.Friendships.Where(w => w.FriendStatus == Env.Friend).Count()
                                </span>
                                <span class="text-muted">Friends</span>
                            </a>
