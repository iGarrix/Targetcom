                        <hr />
                        <div class="d-flex flex-wrap" style="gap: .8rem;">
                            @foreach (var item in Model.IdentityProfile.Friendships.Where(w => w.FriendId == Model.IdentityProfile.Id && w.FriendStatus == Env.Subscribe).Take(6))
                            {
                                if (item.FriendId == Model.IdentityProfile.Id)
                                {
