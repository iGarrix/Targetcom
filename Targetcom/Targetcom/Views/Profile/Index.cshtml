                                <span class="day_color_main" style="font-size: 18px;">
                                    @Model.IdentityProfile.Friendships.Where(w => w.FriendId == Model.IdentityProfile.Id && w.FriendStatus == Env.Subscribe).Count()
                                </span>
                                <span class="text-muted">Subscribers</span>
                            </a>
                            <a asp-controller="Images" asp-action="Index" class="d-flex flex-column align-items-center"><span class="day_color_main" style="font-size: 18px;">@Model.IdentityProfile.ProfilePostages.Where(w => w.IsObject && w.ProfileId == Model.IdentityProfile.Id).Count()</span> <span class="text-muted">Images</span></a>
                        </div>
                    </div>
                </div>
                @if (Model.IdentityProfile.ImageVidget)
                {
                    if (Model.IdentityProfile.ProfilePostages.Where(w => w.IsObject).Count() > 0)
                    {
                        <div class="border-0 gap d-flex justify-content-around overflow-hidden">
                            @foreach (var item in Model.IdentityProfile.ProfilePostages.Where(w => w.IsObject).OrderByDescending(o => o.TimeStamp).Take(4))
                            {
                                <div class="rounded objf d-flex" style="width: 116px; height:116px; background-image: url(@item.Content);">
