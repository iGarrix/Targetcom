                            <div class="d-flex">
                                <p class="text-muted m-0" style="width: 12rem;">Genger:</p>
                                <p class="day_color_main ml-2 m-0">@Model.IdentityProfile.Gender</p>
                            </div>
                            @if (Model.IdentityProfile.Hobbies != null)
                            {
                                @if (Model.IdentityProfile.Hobbies.Length > 0)
                                {
                                    <div class="d-flex">
                                        <p class="text-muted m-0" style="width: 12rem;">Hobbies:</p>
                                        <p class="day_color_main ml-2 m-0">@Model.IdentityProfile.Hobbies</p>
                                    </div>
                                }
                            }
