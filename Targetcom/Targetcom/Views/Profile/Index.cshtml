                                            <a class="m-0" asp-controller="Friends" asp-action="ViewProfile" asp-route-id="@item.Profile.Id">@item.Profile.Name</a>
                                        </div>
                                    }
                                    if (item.ProfileId == Model.IdentityProfile.Id)
                                    {
                                        <div class="d-flex flex-column align-items-center p-2 overflow-hidden" style="width: 60px;">
                                            <img src="@item.Friend.UrlAvatar" class="border-0 rounded-circle" alt="Avatar" style="width: 38px; height: 38px;" />
                                            <a class="m-0" asp-controller="Friends" asp-action="ViewProfile" asp-route-id="@item.Friend.Id">@item.Friend.Name</a>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                }
                @** If 0 friends *@
                @if (Model.IdentityProfile.Friendships.Where(w => w.FriendId == Model.IdentityProfile.Id && w.FriendStatus == Env.Subscribe).Count() == 0)
