                                <div class="text-light bg-danger rounded p-2 d-flex justify-content-center align-items-center flex-grow-1" style="font-family: Poppins, sans-serif;">
                                    <p class="m-0">Admin <i class="fas fa-code" style="font-size: 13px;"></i></p>
                                </div>
                            }
                            @if (User.IsInRole(Env.ModerRole))
                            {
                                <div class="text-light bg-info rounded p-2 d-flex justify-content-center align-items-center flex-grow-1" style="font-family: Poppins, sans-serif;">
                                    <p class="m-0">Moderator <i class="fas fa-glasses" style="font-size: 13px;"></i></p>
                                </div>
                            }
