@{
    ViewData["Title"] = $"{Model.IdentityProfile.Name} {Model.IdentityProfile.Surname}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Targetcom.Models.ViewModels.ProfileVM;

<style>
    .gap {
        gap: 1rem;
    }

    .card-footer .d-flex > a:hover {
        text-decoration: none;
    }

    .viewallbtn {
        width: 100%;
        font-family: Poppins, sans-serif;
    }

        .viewallbtn:hover {
            background-color: #eeeeee;
            text-decoration: none;
        }

    .night .viewallbtn:hover {
        background-color: #1f1f1f;
        text-decoration: none;
    }

    .disable {
        display: none;
    }

    .btnedit {
        width: 100%;
        font-family: Poppins, sans-serif;
    }

        .btnedit:hover {
            background-color: #eeeeee;
            text-decoration: none;
        }

    .middletabbtn:hover {
        text-decoration: none;
    }

    .middletabbtn1 {
        background-color: transparent;
        text-decoration: none;
    }

        .middletabbtn1:hover {
            background-color: #eeeeee;
            text-decoration: none;
        }

    #summernote {
        font-size: 14px;
        outline: 0 !important;
        border: 0;
    }


    .dropbtn {
        color: white;
        border: none;
        cursor: pointer;
        background-color: transparent;
    }

    /* The container <div> - needed to position the dropdown content */
    .dropdown {
        position: relative;
        display: inline-block;
        transition: .2s;
    }

    /* Dropdown Content (Hidden by Default) */
    .dropdown-content {
        display: none;
        position: absolute;
        min-width: 160px;
        z-index: 1;
        right: 0;
        transition: .2s;
    }

        /* Links inside the dropdown */
        .dropdown-content button {
            display: block;
        }

    /* Show the dropdown menu on hover */
    .dropdown:hover .dropdown-content {
        display: block;
    }

    .btnlike:hover {
        text-decoration: none;
    }

    img {
        object-fit: cover;
    }

    .objf {
        object-fit: cover;
        background-size: 116px 120px;
    }

    .objfeffect {
        opacity: 0%;
        transition: .1s;
    }

        .objfeffect:hover {
            opacity: 100%;
            background-color: rgba(0, 0, 0, 0.60);
        }

    .rainbow {
        animation: textAnimate 12s linear infinite alternate;
    }

    @@keyframes textAnimate {

        0% {
            color: #98ff00;
        }

        25% {
            color: #6000ff;
        }

        50% {
            color: #ff6b00;
        }

        75% {
            color: #007aff;
        }

        100% {
            color: #ff0000;
        }
    }

    .grid {
        top: -6.5%;
        left: -6.5%;
        background-size: 106.5% 106.5%;
        object-fit: cover;
        width: 106.5%;
        height: 106.5%;
    }

    .anim {
        transition: 2s;
        animation: ocean 10s ease-in-out alternate infinite;
    }

    @@keyframes ocean {
        0% {
            color: #3783fb;
            text-shadow: 0 0 40px #3783fb;
        }

        100% {
            color: #b3e536;
            text-shadow: 0 0 40px #b3e536;
        }
    }
    .down {
        animation: loadDown 1s ease-in-out forwards;
    }

    @@keyframes loadDown {
        0% {
            opacity: 100%;
        }

        100% {
            opacity: 0%;
            visibility: hidden;
        }
    }
    .navbtn:hover {
        transform: scale(1.040);
    }
</style>
<div class="gap d-flex gap day_color_font" style="font-family: Poppins, sans-serif;">
    <partial name="SideBar" model="new Tuple<int, int>(Model.IdentityProfile.Friendships.Count(w => w.FriendStatus == Env.Invite && w.FriendId == Model.IdentityProfile.Id),0)" />
